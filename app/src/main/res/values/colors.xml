<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 种子色：冷灰绿，低饱和度，让界面有一点气质而不喧宾夺主 -->
    <color name="seed">#A9BDB7</color>

    <!-- 主色：浅灰绿，既有层次感又不过于鲜艳 -->
    <color name="md_theme_light_primary">#BFCFCC</color>
    <color name="md_theme_light_onPrimary">#1C1C1C</color>

    <!-- 次色：淡灰蓝，用于按钮边框、强调线条、选中状态 -->
    <color name="md_theme_light_secondary">#C9CED7</color>

    <!-- 背景：偏暖的白，不是纯白(#FFFFFF)，而是带一点灰，柔和眼睛 -->
    <color name="md_theme_light_background">#F5F6F7</color>

    <!-- 表面色：纯净白，用于卡片、浮层、按钮背景 -->
    <color name="md_theme_light_surface">#FFFFFF</color>

    <!-- 文字颜色：中性深灰，适合高对比阅读 -->
    <color name="md_theme_light_onSurface">#2A2A2A</color>
</resources>
