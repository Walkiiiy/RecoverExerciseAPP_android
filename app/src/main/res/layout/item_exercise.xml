<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/card_white_transparent"
    app:cardCornerRadius="20dp"
    app:cardElevation="1dp"
    app:strokeColor="@color/apple_separator_light"
    app:strokeWidth="0dp"
    app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- 视频缩略图 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/videoThumbnailCard"
            android:layout_width="110dp"
            android:layout_height="75dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/placeholder_video_thumbnail">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_video_placeholder"
                    android:contentDescription="视频预览" />
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/apple_label"
            android:textStyle="bold"
            android:letterSpacing="-0.01"
            app:layout_constraintTop_toTopOf="@id/videoThumbnailCard"
            app:layout_constraintStart_toEndOf="@id/videoThumbnailCard"
            app:layout_constraintEnd_toStartOf="@+id/repetitionBadge"
            tools:text="淋巴引流操" />

        <TextView
            android:id="@+id/repetitionBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_badge"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
            android:textColor="@color/md_theme_light_primary"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/videoThumbnailCard"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="10 个" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="6dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/apple_label_secondary"
            android:lineSpacingMultiplier="1.4"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintBottom_toBottomOf="@id/videoThumbnailCard"
            app:layout_constraintStart_toEndOf="@id/videoThumbnailCard"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="通过特定的手臂运动促进淋巴回流，缓解术后肿胀。" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/startButton"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:text="@string/start_practice"
            android:textSize="16sp"
            android:textAllCaps="false"
            app:icon="@drawable/ic_play"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="18dp"
            app:cornerRadius="14dp"
            app:layout_constraintTop_toBottomOf="@id/videoThumbnailCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
